<!DOCTYPE html>
<html>

<head>
    <%- include('../layout/head.ejs') %>
</head>

<body>
    <%- include('../layout/header.ejs') %>
    <main>
        <h2>Search Results</h2>
        <ul>
            <% bookInfo.forEach(function(o) {%>
            <div class="bookboxes">

                <li>
                    <form action="/add" method="post">
                        <img src="<%= o.image %>" alt="<%= o.title %>">

                        <p class="textbody" id="title">
                            <%= o.title %>
                        </p>
                        <p class="textbody" id="author">
                            <%= o.author %>
                        </p>
                        <p class="textbody" id="description">
                            Description: <%= o.description %>
                        </p>
                        <button type="submit">Add Book!</button>
                    </form>
                </li>
            </div>

            <% })%>
        </ul>





    </main>
</body>

</html>