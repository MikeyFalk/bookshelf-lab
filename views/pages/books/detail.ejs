<!DOCTYPE html>
<html>

<head>
    <%- include('../layout/head.ejs') %>
</head>

<body>
    <%- include('../layout/header.ejs') %>
    <main>
        <h2>Book Details</h2>

        <ul>
            <div class="bookboxes">

                <li>
                    <img src="<%= book.image%>" alt="<%= book.title %>">
                </li>
                <li class="textbody" id="title">
                    <%= book.title %>
                </li>
                <li class="textbody" id="author">
                    <%= book.author %>
                </li>
                <li class="textbody" id="description">
                    Description: <%= book.description %>
                </li>
                <li class="textbody" id="description">
                    ISBN: <%= book.isbn %>
                </li>
            </div>
            <form action="/update/<%= book.id %>?_method=PUT" method="post">

                <input name="title" value="<%= book.title %>">
                <input name="author" value="<%= book.author %>">
                <input name="isbn" value="<%= book.isbn %>">
                <input name="image_url" value="<%= book.image %>">
                <input name="description" value="<%= book.description %>">
                <button type="submit">Update Book!</button>
            </form>
            <button type="submit"> Try to update Book!</button>
            <a href="../update/<%= book.id %>"">Update Book</a>
            <a href=" ../">Delete Book</a>

        </ul>



        <a href="../">Return Home</a>


    </main>
</body>

</html>